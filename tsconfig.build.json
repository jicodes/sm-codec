{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Build",
  "compilerOptions": {
    "lib": ["dom", "es2021"],
    "module": "commonjs",
    "target": "es2021",

    "rootDir": "./src",
    "sourceRoot": "./src",
    "outDir": "./lib",

    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.js",
    "node_modules",
    "**/*.spec.ts"
  ]
}